FROM python:3.11-alpine

WORKDIR /app

# Install minimal dependencies
RUN pip install --no-cache-dir uvicorn fastapi starlette

# Copy the dashboard server
COPY infra/dashboard/serve-live.py .

# Copy static files
COPY infra/dashboard/static /app/static

ENV PORT=8080
ENV STATIC_PATH=/app/static

EXPOSE 8080

# Run the dashboard server
CMD ["uvicorn", "serve-live:app", "--host", "0.0.0.0", "--port", "8080"]
