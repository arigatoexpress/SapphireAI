# Automatically activate the Python virtual environment if present
if [ -d ".venv" ]; then
  source .venv/bin/activate
fi

export PYTHONPATH="${PWD}:$PYTHONPATH"

# Autonomous Trading System Configuration
# ======================================

# Service Endpoints (replace with your actual endpoints)
export REDIS_URL="redis://your-redis-host:6379"
export ORCHESTRATOR_URL="https://your-orchestrator-url.run.app"
export LLM_ENDPOINT="https://your-model-router-url.run.app"

# Bot Configuration
export BOT_ID="cloud_trader"
export ENABLE_PAPER_TRADING="true"

# LLM Configuration
export ENABLE_LLM_TRADING="false"
export MIN_LLM_CONFIDENCE="0.7"
export LLM_TIMEOUT_SECONDS="30"

# Risk Management
export MAX_PORTFOLIO_LEVERAGE="2.0"
export MAX_POSITION_PCT="0.02"
export MIN_POSITION_SIZE="0.001"
export KELLY_FRACTION_CAP="0.5"

# API Credentials (from Google Secret Manager or environment variables)
# These should reference secret names, not actual keys
export ASTER_API_KEY="ASTER_API_KEY:latest"
export ASTER_SECRET_KEY="ASTER_SECRET_KEY:latest"
